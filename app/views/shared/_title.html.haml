%nav.navbar.navbar-inverse.navbar-fixed-top{:role=>"navigation"}
  .container
    .navbar-header
      %a.navbar-brand{href: '/'}
        New Crunch Base
    %ul.nav.navbar-nav
      - if params[:locale] == 'zh'
        %li
          %a{href: "/?locale=en"}
            English
        
        %li.active
          %a{href: "/?locale=zh"} 中文

      - else
        %li.active
          %a{href: "/?locale=en"}
            English

        %li
          %a{href: "/?locale=zh"}
            = t(:Chinese)
    
    %ul.nav.navbar-nav.navbar-right
      %li
        %a{href: "/"}
          = t('Sign Up')
      %li
        %a{href: "/"}
          = t('Log In')

.container{style: 'margin-top: 85px'}
  .category-container
    .category-inner-block
      - Category.all.each do |cat| 
        %span.cat
          = link_to t(cat.name), action: :list 
  
  .row.company-search
    .col-md-6.col-md-offset-2
      %input.form-control{type: :search, placeholder: 'Search for Company'}
    .col-md-1
      %button.btn.btn-primary{type: :button}
        = t('Search')
    .col-md-1
      %button.btn.btn-success{type: :button}
        = t('Create a Company')
  
  .main-content
    = yield :main_content
